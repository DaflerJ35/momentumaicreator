# Server Environment Variables
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development

# API Configuration
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173

# Firebase Admin SDK (for server-side operations)
# Get these from Firebase Console -> Project Settings -> Service Accounts
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com

# Encryption and OAuth State Secrets (REQUIRED in production)
# Generate these with: openssl rand -hex 32
TOKEN_ENCRYPTION_KEY=your-64-character-hex-encryption-key-here
OAUTH_STATE_SECRET=your-64-character-hex-oauth-state-secret-here

# Platform OAuth Credentials

# Instagram
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# Twitter/X
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# Google/YouTube
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# TikTok
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_MONTHLY_PRO_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_MONTHLY_BUSINESS_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_MONTHLY_BUSINESS_PLUS_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_6MONTH_PRO_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_6MONTH_BUSINESS_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_6MONTH_BUSINESS_PLUS_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_YEARLY_PRO_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_YEARLY_BUSINESS_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_YEARLY_BUSINESS_PLUS_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx

# AI Service (Optional - for server-side AI)
AI_PROVIDER=ollama
GEMINI_API_KEY=your-gemini-api-key
OLLAMA_URL=https://api.ollama.ai
OLLAMA_API_KEY=your-ollama-api-key
AI_DEFAULT_MODEL=llama3.1:8b-instruct
FREE_AI_MODE=false

# Hybrid AI (Optional) â€” enable chaining Ollama + Gemini
# HYBRID_MODE=true enables hybrid methods (e.g., Ollama preprocess -> Gemini synthesize)
HYBRID_MODE=false
# Role label for Ollama stage (descriptive only)
# Note: Only OLLAMA_ROLE is supported. Typos like OLLABMA_ROLE or OLLLAMA_ROLE are ignored.
OLLAMA_ROLE=assistant
# Default flow controls ordering/parallelism when not overridden per-call.
# Set to include the word "parallel" to run both providers concurrently.
# Examples:
#   HYBRID_DEFAULT_FLOW=ollama-preprocess->gemini-synthesize
#   HYBRID_DEFAULT_FLOW=parallel-ideation
HYBRID_DEFAULT_FLOW=ollama-preprocess->gemini-synthesize
# Streaming format for Ollama streaming API: jsonl (default) or text
OLLAMA_STREAM_FORMAT=jsonl

# Scheduler / Cron
# Set a strong random secret and configure your Vercel Cron to POST /api/scheduler/run with header X-Cron-Secret
CRON_SECRET=replace-with-strong-random-secret

# Redis (Optional - recommended for idempotency and anti-abuse rate tracking)
# Example: redis://default:password@your-redis-host:6379
REDIS_URL=
REDIS_PASSWORD=

# Image Generation (Optional)
IMAGE_PROVIDER=dalle3
OPENAI_API_KEY=your-openai-api-key
STABILITY_API_KEY=your-stability-api-key

# Video Generation (Optional)
VIDEO_PROVIDER=runway
RUNWAY_API_KEY=your-runway-api-key
PIKA_API_KEY=your-pika-api-key

# Voice Generation (Optional)
VOICE_PROVIDER=elevenlabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key
GOOGLE_CLOUD_TTS_KEY=your-google-cloud-tts-key

# OAuth Callback URLs
# These should match your API_URL + /api/platforms/{platformId}/oauth/callback
# Example: https://www.momentumaicreator.com/api/platforms/instagram/oauth/callback
# Make sure to configure these in each platform's OAuth app settings
