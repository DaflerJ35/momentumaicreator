{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "platforms": {
          ".read": false,
          ".write": false
        },
        "email": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "displayName": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "photoURL": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "createdAt": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "lastLogin": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "scheduledPosts": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "analytics": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "oauth_states": {
      ".read": false,
      ".write": false
    }
  }
}

