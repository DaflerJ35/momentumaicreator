{
  "version": 2,
  "installCommand": "corepack enable && pnpm -C momentum-ai install --frozen-lockfile && npm --prefix momentum-ai/server ci",
  "buildCommand": "cd momentum-ai && pnpm install --frozen-lockfile && pnpm run build",
  "outputDirectory": "momentum-ai/dist",
  "framework": null,
  "functions": {
    "momentum-ai/api/server.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 300,
      "memory": 3008,
      "includeFiles": "momentum-ai/server/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/momentum-ai/api/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/momentum-ai/dist/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        },
        {
          "key": "Vercel-CDN-Cache-Control",
          "value": "max-age=0, s-maxage=0, stale-while-revalidate=0"
        }
      ]
    },
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        },
        {
          "key": "Vercel-CDN-Cache-Control",
          "value": "max-age=0, s-maxage=0, stale-while-revalidate=0"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
